<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>

  <definition name="transactions/*"
      template="layout">
    <put-attribute name="content"
        value="content/transactions/{1}"/>
    <put-attribute name="title"
        value="title/transactions/{1}"/>
    <put-attribute name="head"
        value="head/transactions/{1}"/>
  </definition>

  <definition name="content/transactions/*"
      template="transactions/{1} :: content"/>
  <definition name="title/transactions/*"
      template="transactions/{1} :: title"/>
  <definition name="head/transactions/*"
      template="transactions/{1} :: /html/head/link"/>

</tiles-definitions>